.sn-report {
  .ppt-list {
    width: 640px;
    margin: 0 auto;
    background: #ECECEC;

    .ppt-item {
      position: relative;
      height: 360px;
      background: #FAFAFA;
      margin-bottom: 12px;

      h2,
      h3,
      h4,
      h5 {
        margin: 0;
        padding: 0;
      }

      &:last-child {
        margin-bottom: 0;
      }

      //input::-ms-input-placeholder,
      /*input:: -webkit-input-placeholder,*/
      /*input::-webkit-placeholder {
        color: #3991FC;
      }*/
      input,
      textarea {
        color: #3991FC;
        border: 1px solid #FAFAFA;
        background-color: transparent;
        border-radius: .25rem;
        transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        resize: none;

        &:focus {
          color: #3991FC;
          border: 1px solid #80bdff;
          outline: 0;
          box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .25);
        }

        &::placeholder {
          color: #3991FC;
        }
      }
    }

    section:nth-child(1) {
      h3 {
        position: absolute;
        left: 140px;
        top: 80px;

        font-family: PingFang SC;
        font-style: normal;
        font-weight: 500;
        font-size: 20px;
        line-height: 28px;

        color: rgba(0, 0, 0, 0.8);
      }
      input.title {
        position: absolute;
        width: 360px;
        height: 42px;
        left: 140px;
        top: 119px;

        font-family: PingFang SC;
        font-style: normal;
        font-weight: 500;
        font-size: 30px;
        line-height: 42px;
        /* identical to box height */

        color: #3991FC;
      }
      .author {
        position: absolute;
        //width: 48px;
        //height: 17px;
        left: 247px;
        top: 295px;

        font-family: PingFang SC;
        font-style: normal;
        font-weight: normal;
        font-size: 12px;
        line-height: 17px;
        /* identical to box height */

        color: rgba(0, 0, 0, 0.8);
      }
    }
    section:nth-child(2) {
      textarea {
        position: absolute;
        width: 492px;
        //height: 36px;
        left: 74px;
        top: 64.82px;

        font-family: Source Han Sans CN;
        font-style: normal;
        font-weight: normal;
        font-size: 12px;
        line-height: 18px;

        color: #3991FC;
      }
    }
    section:nth-child(3) {
