.flow {
  display: inline-flex;
  background-color: #f5f5f5;
  padding-top: 90px;
  min-width: 100%;
  min-height: 100%;

  .flow-list {
    margin: 0 auto;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
  }

  .flow-item {
    position: relative;

    &.flow-node, &.flow-condition, &.start, &.end {
      width: 200px;
      height: 150px;
      min-height: 150px;
    }

    &.flow-gw {
      width: 60px;
      height: 30px;
    }

    &.error {
      .flow-node-wrap {
        border: 3px solid #f96969;
      }
    }
  }

  .preview-desc {
    position: absolute;
    z-index: 9;
    top: 64px;
    width: 100%;
    max-height: 68px;
    padding: 5px;
    color: #54a52d;
    background: rgba(255, 255, 255, 0.6);
    border-radius: 4px;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    line-height: 16px;

    &.error {
      color: #f96969;
    }
  }

  .flow-node-wrap {
    background-color: #2196F3;
    max-height: 90px;
    width: 200px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    border-radius: 10px;
    overflow: hidden;

    &.green {
      background-color: #67c23a;
    }

    &.disabled {
      background-color: #eee;

      .node-main {
        cursor: not-allowed;
      }

      .node-title {
        color: #666;
        border-bottom: none;
      }
    }

    &.preview {
      background-color: #9c9c9c;

      &.preview-success {
        background-color: #67c23a;
      }

      &.preview-warn {
        background-color: #f59700;
      }

      &.preview-error {
        background-color: #ff6a56;
      }

      &.preview-active {
        .node-title {
          color: #fff;
          border-bottom: none;
        }
      }

      .node-main {
        -webkit-line-clamp: 1;
      }
    }

    .close {
      position: absolute;
      top: 0px;
      right: 5px;
      font-style: normal;
      padding: 0px 5px;
      cursor: pointer;
    }

    .node-title {
      font-size: 12px;
      padding: 5px 20px 3px 12px;
      color: #fff;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .node-main {
      font-size: 13px;
      margin: 3px 6px 6px;
      min-height: 25px;
      background-color: #fff;
      color: #666;
      cursor: pointer;
      border-radius: 4px;
      overflow: hidden;
      white-space: normal;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;

      &.empty {
        color: #aaa;
      }
    }
  }

  .flow-condition {
    .flow-node-wrap {
      background-color: #fff;
      border: 1px solid #eee;

      &.disabled {
        background-color: #eee;

        .node-main {
          cursor: not-allowed;
        }

        .node-title {
          border-bottom: none;
        }
      }

      &.preview {
        background-color: #fff;

        &.preview-active {
          border-color: #67c23a;

          .node-title {
            color: #666;
            border-bottom: none;
          }
        }

        .node-main {
          -webkit-line-clamp: 1;
        }
      }
    }

    .node-title {
      color: #666;
      border-bottom: 1px solid #eee;
    }
  }

  .flow-node > .flow-vertical-line {
    position: absolute;
    bottom: 0;
    left: 99px;
    height: 150px;
    width: 2px;
    background-color: #ddd;
  }

  .flow-gw > .flow-vertical-line {
    position: absolute;
    bottom: 0;
    left: 29px;
    height: 16px;
    width: 2px;
    background-color: #ddd;
  }

  .flow-item.flow-condition .flow-vertical-line {
    position: absolute;
    bottom: 0;
    left: 99px;
    height: 150px;
    width: 2px;
    background-color: #ddd;
  }

  .add-item-btn {
    width: 23px;
    height: 23px;
    border-radius: 50%;
    border: 3px solid lightblue;
    background: #fff;
    text-align: center;
    line-height: 15px;
    cursor: default;
    position: relative;
    cursor: pointer;
    user-select: none;
  }

  .add-item-btn:hover {
    border: 3px dashed #37f;
    box-shadow: 0 0 6px rgba(0, 0, 0, .3);
  }

  .add-item-btn .add-node-options-wrap {
    display: none;
    position: absolute;
    top: -28px;
    left: -5px;
    padding: 20px
  }

  .add-item-btn:hover .add-node-options-wrap {
    display: block;
  }

  .add-item-btn .add-node-options {
    display: flex;
    flex-direction: column;
    position: relative;
    background-color: #fff;
    padding: 15px;
    z-index: 5;
    border-radius: 8px;
    box-shadow: 0 4px 16px 0 rgba(56, 73, 69, .3);
    cursor: pointer;
    user-select: none;
  }

  .add-node-options:before {
    content: "";
    position: absolute;
    top: 8px;
    left: -8px;
    display: block;
    width: 0;
    height: 0;
    border-color: transparent #fff transparent transparent;
    border-style: solid;
    border-width: 8px 8px 8px 0;
  }

  .add-item-btn .add-node-options .node-type {
    padding: 10px;
    white-space: nowrap;
    border: 2px dashed rgba(51, 119, 255, 0.3);
    color: #333;
    font-size: 13px;
    border-radius: 4px;
    margin-bottom: 10px;
  }

  .add-item-btn .add-node-options .node-type:hover {
    border-style: solid;
    box-shadow: 0 2px 10px 0 rgba(56, 73, 69, .11);
  }

  .add-item-btn .add-node-options .node-type:last-child {
    margin-bottom: 0;
  }

  .add-item-btn .add-node-options .type-node {
    border-color: rgba(254, 125, 81, 0.3);
  }

  .flow-node .add-item-btn {
    position: absolute;
    bottom: 26px;
    left: 89px;
  }

  .flow-condition .add-item-btn {
    position: absolute;
    bottom: 26px;
    left: 89px;
  }

  .flow-item.conditions {
    display: flex;
    flex-direction: column;
  }

  .flow-th-line {
    height: 2px;
    background-color: red;
    //margin-top: 14px;
    margin-bottom: -15px;

    &.empty {
      margin-top: 0;
    }
  }

  .add-branch {
    position: relative;
    height: 28px;
    margin-bottom: 16px;
    border-radius: 14px;
    border: 1px solid transparent;
    align-self: center;
    color: #37f;
    font-size: 12px;
    cursor: pointer;
    z-index: 1;
    background-color: #fff;
    line-height: 24px;
    border: 2px solid lightblue;

    &.empty {
      border: none;
      padding: 0;
    }

    .add-branch-btn {
      padding: 0 10px;
      user-select: none;
    }

    &.concurrent {
      color: #fff;
      border: 2px solid #efefef;
      background-color: #597ef7;
      padding: 0 10px;
    }
  }

  .add-branch:hover {
    border-color: #37f;
    border-style: dashed;
    box-shadow: 0 0 6px rgba(0, 0, 0, .3);

    &.concurrent {
      border-style: solid;
      border-color: #fff;
      background-color: #597ef7;
      color: #fff;
    }
  }

  .branches {
    display: flex;
    justify-content: center;
  }

  .branches .flow-branch {
    position: relative;
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    padding: 0 50px;
    min-height: 100%;
  }

  .flow-bh-line {
    height: 2px;
    background-color: red;
  }

  .conditions > .flow-vertical-line {
    height: 100px;
    width: 2px;
    background-color: #ddd;
    align-self: center;
  }

  .conditions > .add-item-btn {
    margin-top: -61.5px;
    margin-bottom: 38.5px;
    align-self: center;
  }

  .conditions > .flow-gw {
    align-self: center;
    margin-top: -10px;
  }

  .top-line-place {
    display: none;
  }

  .flow-branch .top-vertical-line {
    position: absolute;
    top: -31px;
    left: 50%;
    margin-left: -1px;
    width: 2px;
    height: 32px;
    background: #ddd;
  }

  .flow-branch > .bottom-vertical-line {
    width: 2px;
    flex-grow: 1;
    background: #ddd;
  }

  .flow-branch:first-child > .top-line-place {
    top: -31px;
    left: 0px;
    display: block;
    position: absolute;
    width: 50%;
    height: 2px;
    background-color: #f5f5f5;
  }

  .flow-branch:last-child > .top-line-place {
    top: -31px;
    right: 0;
    display: block;
    position: absolute;
    width: 50%;
    height: 2px;
    background-color: #f5f5f5;
  }

  .flow-branch:first-child > .bottom-line-place {
    bottom: -2px;
    left: 0;
    display: block;
    position: absolute;
    width: 50%;
    height: 2px;
    background-color: #f5f5f5;
  }

  .flow-branch:last-child > .bottom-line-place {
    bottom: -2px;
    right: 0;
    display: block;
    position: absolute;
    width: 50%;
    height: 2px;
    background-color: #f5f5f5;
  }

  .flow-main {
    height: 100%;
    overflow: auto;
    padding-bottom: 55px;
  }

  .flow-form {
    padding: 20px;
  }

  .flow-form-item {
    margin-bottom: 20px;
  }

  .drawer-head {
    padding: 24px;
    border-bottom: 1px solid #eee;
  }

  .drawer-main {
    padding: 0 0 24px;

    // 预警tab样式覆写
    .ant-tabs-nav .ant-tabs-tab {
      margin: 0;
      padding: 8px 10px;
    }

    .ant-tabs-nav .ant-tabs-tab .anticon {
      margin-left: 5px;
    }

    .notice-row {
      margin-bottom: 10px;
    }
    .ant-checkbox-group {
      line-height: 40px;
    }
  }

  .drawer-foot {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    box-shadow: -1px 0 10px rgba(0, 0, 0, .3);
    border-top: 1px solid #eee;
    padding: 10px 16px;
    text-align: right;
    background-color: #fff;
  }

  .edit-btn {
    cursor: pointer;
  }

  .flow-node-gw {
    width: 16px;
    height: 16px;
    background-color: #597ef7;
    border-radius: 50%;
    text-align: center;
    margin: auto;
    line-height: 30px;
    font-size: 12px;
    color: #fff;
    transform: scale(0.8);
  }

}
